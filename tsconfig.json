{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false
  },
  "filesGlob": [
    "src/app/**/*.ts",
    "typings/index.d.ts",
    "!node_modules/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "typings/main",
    "typings/main.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  },
  "compileOnSave": false,
  "files": [
    "src/app/app.component.ts",
    "src/app/app.ts",
    "src/app/todo/todo.component.ts",
    "src/app/todo/todo.model.ts",
    "src/app/todo/todo.service.ts",
    "src/app/todo/todo.viewmodel.ts"
  ]
}
